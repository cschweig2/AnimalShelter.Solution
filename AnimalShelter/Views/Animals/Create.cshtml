@{
    Layout = "_Layout";
}

@Model AnimalShelter.Models.Animal

<h4>Add a new animal</h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Type)
    @Html.TextBoxFor(model => model.Type)
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.LabelFor(model => model.Gender)
    @Html.TextBoxFor(model => model.Gender)
    @Html.LabelFor(model => model.Breed)
    @Html.TextBoxFor(model => model.Breed)
    @Html.LabelFor(model => model.AdmittanceDateDay)
    @Html.TextBoxFor(model => model.AdmittanceDateDay)
    @Html.LabelFor(model => model.AdmittanceDateMonth)
    @Html.TextBoxFor(model => model.AdmittanceDateMonth)
    @Html.LabelFor(model => model.AdmittanceDateYear)
    @Html.TextBoxFor(model => model.AdmittanceDateYear)
    <input type="submit" value="Add new animal" />
}
<p>@Html.ActionLink("Show all animals", "Index")</p>